<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color: blue" asp-area="" asp-controller="Home" asp-action="Index"><b>TBS</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: blue" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="row m-1 p-1">
        @* Side bar showing some filters *@
        <div class="col-3 justify-content-xl-center">
            <br /><br />
            <h4>Categories</h4>
            <input type="checkbox" />&nbsp; Biography<br />
            <input type="checkbox" />&nbsp; Children<br />
            <input type="checkbox" />&nbsp; Fiction<br />
            <input type="checkbox" />&nbsp; Historical<br />
            <input type="checkbox" />&nbsp; Non-Fiction<br /><br />
            <h4>Price</h4>
            <input type="checkbox" />&nbsp; Below 10 <br />
            <input type="checkbox" />&nbsp; 10-15<br />
            <input type="checkbox" />&nbsp; 15-20<br />
            <input type="checkbox" />&nbsp; 20-25<br />
            <input type="checkbox" />&nbsp; 25-30<br />
            <input type="checkbox" />&nbsp; 30+<br /><br />
            <h4>Ratings</h4>
            <input type="checkbox" />&nbsp; 5 Stars <br />
            <input type="checkbox" />&nbsp; 4 Stars<br />
            <input type="checkbox" />&nbsp; 3 Stars<br />
            <input type="checkbox" />&nbsp; 2 Stars<br />
            <input type="checkbox" />&nbsp; 1 Star<br />
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            Tyler's BookStore &copy; 2021
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
